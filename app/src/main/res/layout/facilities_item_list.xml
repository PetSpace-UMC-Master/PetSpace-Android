<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/review_item"
    android:background="@drawable/edge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:id="@+id/review_linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/user_profile_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/frame_136" />

        <TextView
            android:id="@+id/tv_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="start"
            android:lineHeight="16dp"
            android:paddingLeft="7dp"
            android:text="닉네임"
            android:textColor="#0C201E"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/review_linear2_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_linear1">

        <ImageView
            android:id="@+id/img_start1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/material_symbols_star_rate_rounded" />

        <ImageView
            android:id="@+id/img_start2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/material_symbols_star_rate_rounded" />

        <ImageView
            android:id="@+id/img_star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/material_symbols_star_rate_rounded" />

        <ImageView
            android:id="@+id/img_star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/material_symbols_star_rate_rounded" />

        <ImageView
            android:id="@+id/img_star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_half" />

        <TextView
            android:id="@+id/tv_review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:lineHeight="12dp"
            android:text="3주 전"
            android:textColor="#7F7F7F"
            android:textSize="12dp" />
    </LinearLayout>

    <kr.co.prnd.readmore.ReadMoreTextView
        android:id="@+id/readmoreTV_review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:lineHeight="12dp"
        android:text="품고 기관과 있으며, 만물은 곳으로 운다. 사랑의 그들은 같이,
청춘에서만 되려니와, 방지하는 있는가? 품고 기관과 있으며,
만물은 곳으로운다. 사랑의 그들은 같이, 청춘에서만 되려니와,
방지하는 있는가? 품고 기관과 있으며, 만물은 곳으로..."
        android:textColor="#0C201E"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_linear2_rating"
        app:readMoreColor="#2662BB"
        app:readMoreMaxLine="6"
        app:readMoreText="..더보기"
        tools:ignore="MissingClass" />

    <LinearLayout
        android:id="@+id/review_linear3_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/readmoreTV_review_content">

        <ImageButton
            android:id="@+id/img_review_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/pic_1" />

        <ImageButton
            android:id="@+id/img_review_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/pic_2" />

        <ImageButton
            android:id="@+id/img_review_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/pic_3" />

        <ImageButton
            android:id="@+id/img_review_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/pic_4" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>