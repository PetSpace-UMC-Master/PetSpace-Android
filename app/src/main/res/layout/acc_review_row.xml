<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/accReview"
    android:layout_width="184dp"
    android:layout_height="170dp"
    android:layout_marginStart="10dp"
    android:background="@drawable/background_stroke"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_face"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/face"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textColor="@color/textForBlack"
            android:textSize="14sp"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_face"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/img_star1"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/star3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_star2"

            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="0.4dp"
            android:src="@drawable/star3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_star1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_star3"

            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="0.4dp"
            android:src="@drawable/star3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_star2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_star4"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="0.4dp"
            android:src="@drawable/star3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_star3"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_star5"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/star3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_star4"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="3주전"
            android:textColor="@color/textForBlack"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_star5"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="품고 기관과 있으며, 만물은 곳으로 운다. 사랑의 그들은 같이, 청춘에 서만 되려니와, 방지하는 있는가? 품고 기관과 있으며, 만물은 곳으로 운다. 사랑의 그들은 같이, 청춘에 서만 되려니와, 방지하는 있는가?..."
        android:textColor="@color/textForBlack"
        android:textSize="12sp" />


</LinearLayout>