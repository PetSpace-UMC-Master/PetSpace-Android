<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SigninDescriptionActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
       >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmjua"
            android:text="회원가입"
            android:textColor="#0C201E"
            android:textSize="20dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="세부 정보"
            android:textColor="#0C201E"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_custom"
            android:fontFamily="@font/pretendard_regular"
            android:hint="이름 (예: 홍길동)"
            android:paddingLeft="20dp"
            android:textColor="#7F7F7F"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/editText_nickname"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_custom"
            android:fontFamily="@font/pretendard_regular"
            android:hint="닉네임 (예: 치즈국수)"
            android:paddingLeft="20dp"
            android:textColor="#7F7F7F"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/editText_birth"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_custom"
            android:fontFamily="@font/pretendard_regular"
            android:hint="생일 (예: 20230101)"
            android:paddingLeft="20dp"
            android:textColor="#7F7F7F"
            android:textSize="16sp"
            android:inputType="number"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="50dp"
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="48sp"
                android:background="@drawable/btn_continue"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="20dp"
                android:paddingRight="43dp"
                android:text="계속하기"
                android:textAllCaps="false"
                android:textColor="#EEF5F5"
                android:textSize="16dp"

                tools:layout_editor_absoluteX="20dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</LinearLayout>